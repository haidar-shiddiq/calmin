<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AADE87"
    tools:context=".fragment.MenuFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/blue_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#0E4F83"
        android:src="@drawable/ic_forum"
        app:borderWidth="0dp"
        app:fabCustomSize="80dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:maxImageSize="50dp"
        app:tint="@null" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public Chat"
        android:textAlignment="center"
        android:textColor="#0E4F83"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fabChat"
        app:layout_constraintStart_toStartOf="@+id/fabChat"
        app:layout_constraintTop_toBottomOf="@+id/fabChat" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSelf"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#0E4F83"
        android:src="@drawable/ic_self_improvement"
        app:borderWidth="0dp"
        app:fabCustomSize="80dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/fabChat"
        app:layout_constraintTop_toTopOf="@+id/fabChat"
        app:maxImageSize="50dp"
        app:tint="@null" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="Self Improvement"
        android:textAlignment="center"
        android:textColor="#0E4F83"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fabSelf"
        app:layout_constraintStart_toStartOf="@+id/fabSelf"
        app:layout_constraintTop_toBottomOf="@+id/fabSelf" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCalm"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#0E4F83"
        android:src="@drawable/ic_nature_people"
        app:borderWidth="0dp"
        app:fabCustomSize="80dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/fabChat"
        app:layout_constraintTop_toTopOf="@+id/fabChat"
        app:maxImageSize="50dp"
        app:tint="@null" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/fabCalm"
        android:textStyle="bold"
        android:textColor="#0E4F83"
        android:text="Calm Corner"
        app:layout_constraintStart_toStartOf="@+id/fabCalm"
        app:layout_constraintTop_toBottomOf="@+id/fabCalm" />

</androidx.constraintlayout.widget.ConstraintLayout>